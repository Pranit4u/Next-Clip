{
  "manifest_version": 3,
  "name": "CLIP-IT",
  "short_name": "N-C-S",
  "version": "0.0.1",
  "description": "Clipboard for Chrome. Copying your clips just one click away. Easy search, custom labels and pinned clips. Enjoy the night theme.",
  "icons": {
    "16": "/icons/clipboard.png",
    "32": "/icons/clipboard.png",
    "48": "/icons/clipboard.png",
    "192": "/icons/clipboard.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
